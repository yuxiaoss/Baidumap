<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#cc4e5a6c"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/id_iv_icon"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bg_img_icon"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/a1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="6dp"
        android:background="#4d5c6c"
        android:layout_below="@id/id_iv_icon">

        <TextView
            android:id="@+id/id_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:text="龙泽地铁" />

        <TextView
            android:id="@+id/id_tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="6dp"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:text="龙泽地铁" />


    </FrameLayout>


</RelativeLayout>